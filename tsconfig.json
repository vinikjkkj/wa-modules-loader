{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/import/**/*", "src/export/**/*"],
  "exclude": ["node_modules", "dist"]
}
